<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:orientation="vertical"
	android:layout_gravity="bottom"
	android:id="@+id/custom_transperent_keyboard_container"
	android:layout_height="fill_parent"
	android:clipChildren="true">

	<FrameLayout
		android:id="@+id/custom_transperent_keyboard_preview"
		android:layout_weight="1"
		android:layout_width="fill_parent"
		android:focusable="true"
		android:focusableInTouchMode="true"
		android:layout_height="fill_parent">
	</FrameLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_alignTop="@id/custom_transperent_keyboard_preview"
		android:id="@+id/custom_transperent_keyboard_linearLayout1"
		android:orientation="horizontal"
		android:background="#0fff">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_gravity="top"
			android:id="@+id/custom_transperent_keyboard_compose_item_container">
			<EditText
				android:layout_width="wrap_content"
				android:id="@+id/custom_transperent_keyboard_editText"
				android:layout_height="wrap_content"
				android:maxHeight="50dip"
				android:height="50dip"
				android:background="#8000"
				android:layout_gravity="left|bottom"
				android:layout_weight="1.0"
				android:textColorHint="#ccc"
				android:textColor="#fff"
				android:hint="@string/compose_edittext_hint"
				android:gravity="left" />
			<Button
				android:text="Send"
				android:background="#aa3E75E0"
				android:id="@+id/custom_transperent_keyboard_sendButton"
				android:padding="5dip"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_gravity="right|bottom" />
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/custom_transperent_keyboard_container_1"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_alignParentBottom="true">
		<LinearLayout
			android:id="@+id/custom_transperent_keyboard_row_1"
			android:layout_width="fill_parent"
			android:gravity="center_horizontal"
			android:layout_height="40dip"
			android:baselineAligned="false"
			android:orientation="horizontal"
			android:layout_weight="1">
			<Button
				android:text="q"
				android:id="@+id/key_q"
				android:padding="0dip"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:text="w"
				android:padding="0dip"
				android:id="@+id/key_w"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:text="e"
				android:padding="0dip"
				android:id="@+id/key_e"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:text="r"
				android:padding="0dip"
				android:id="@+id/key_r"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_gravity="center"
				android:layout_weight="1" />
			<Button
				android:text="t"
				android:padding="0dip"
				android:id="@+id/key_t"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:text="y"
				android:padding="0dip"
				android:id="@+id/key_y"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:text="u"
				android:padding="0dip"
				android:id="@+id/key_u"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:text="i"
				android:id="@+id/key_i"
				android:padding="0dip"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:text="o"
				android:id="@+id/key_o"
				android:padding="0dip"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:text="p"
				android:id="@+id/key_p"
				android:padding="0dip"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/custom_transperent_keyboard_row_2"
			android:layout_width="fill_parent"
			android:gravity="center_horizontal"
			android:padding="0dip"
			android:layout_height="40dip"
			android:layout_weight="1">
			<Button
				android:text="a"
				android:padding="0dip"
				android:id="@+id/key_a"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:text="s"
				android:padding="0dip"
				android:id="@+id/key_s"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:text="d"
				android:id="@+id/key_d"
				android:padding="0dip"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:text="f"
				android:id="@+id/key_f"
				android:padding="0dip"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:text="g"
				android:id="@+id/key_g"
				android:padding="0dip"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:text="h"
				android:padding="0dip"
				android:id="@+id/key_h"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:text="j"
				android:id="@+id/key_j"
				android:padding="0dip"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:text="k"
				android:padding="0dip"
				android:id="@+id/key_k"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:text="l"
				android:padding="0dip"
				android:id="@+id/key_l"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/custom_transperent_keyboard_row_3"
			android:layout_width="fill_parent"
			android:gravity="center_horizontal"
			android:layout_height="40dip"
			android:layout_weight="1">
			<Button
				android:background="@drawable/sym_keyboard_shift"
				android:id="@+id/key_shift"
				android:padding="0dip"
				android:layout_width="40dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:text="z"
				android:id="@+id/key_z"
				android:padding="0dip"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:text="x"
				android:padding="0dip"
				android:id="@+id/key_x"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:text="c"
				android:padding="0dip"
				android:id="@+id/key_c"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:text="v"
				android:padding="0dip"
				android:id="@+id/key_v"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:text="b"
				android:padding="0dip"
				android:id="@+id/key_b"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:text="n"
				android:padding="0dip"
				android:id="@+id/key_n"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:text="m"
				android:id="@+id/key_m"
				android:padding="0dip"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:background="@drawable/sym_keyboard_delete"
				android:id="@+id/key_delete"
				android:layout_width="40dip"
				android:padding="0dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/custom_transperent_keyboard_row_4"
			android:layout_width="fill_parent"
			android:padding="0dip"
			android:gravity="center_horizontal"
			android:layout_height="40dip"
			android:layout_weight="1">
			<Button
				android:text="..."
				android:id="@+id/key_123"
				android:padding="0dip"
				android:layout_width="35dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:text=""
				android:id="@+id/key_settings"
				android:layout_width="33dip"
				android:padding="0dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:text=","
				android:id="@+id/key_comma"
				android:layout_width="33dip"
				android:padding="0dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:text="     "
				android:id="@+id/key_space"
				android:padding="0dip"
				android:background="#8fff"
				android:layout_width="75dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:text="."
				android:id="@+id/key_period"
				android:padding="0dip"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:id="@+id/key_speak"
				android:padding="0dip"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
			<Button
				android:id="@+id/key_at"
				android:padding="0dip"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:text="\@" />
			<Button
				android:background="@drawable/sym_keyboard_return"
				android:id="@+id/key_return"
				android:padding="0dip"
				android:layout_width="33dip"
				android:layout_height="fill_parent"
				android:layout_weight="1" />
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>
